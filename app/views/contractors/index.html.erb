<%- model_class = Contractor -%>
<div class="page-header">
  <h3><%= 'Contractors'.upcase %>
    <span class="pull-right">
      <%= link_to 'Add Contractor',
                  new_contractor_path,
                  :class => 'btn btn-primary btn-sm' %>
    </span>
  </h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contact_number) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= link_to contractor.id, contractor_path(contractor) %></td>
        <td><%= contractor.name %></td>
        <td><%= contractor.contact_number %></td>
        <td><%= contractor.address %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      contractor_path(contractor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contractor_path(contractor), :class => 'btn btn-default btn-xs' %>
          <% link_to t('.destroy', :default => t("helpers.links.destroy")),
                      contractor_path(contractor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
