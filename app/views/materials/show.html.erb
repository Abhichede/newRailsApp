<%- model_class = Material -%>
<div class="page-header">
  <h3><%= @material.type_of_material %>
  <span class="pull-right">Date: <%= @material.date %> Time: <%= @material.time %></span>
  </h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @material.supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_id) %>:</strong></dt>
  <dd><%= @material.site.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:challan_no) %>:</strong></dt>
  <dd><%= @material.challan_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:truck_no) %>:</strong></dt>
  <dd><%= @material.truck_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @material.quantity %> <%= @material.unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd>&#8377; <%= @material.rate %>/<%= @material.unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd>&#8377; <%= @material.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supervisor_name) %>:</strong></dt>
  <dd><%= @material.supervisor_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              materials_path, :class => 'btn btn-default btn-sm'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_material_path(@material), :class => 'btn btn-default btn-sm' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              material_path(@material),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-sm' %>
