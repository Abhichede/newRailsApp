<%- model_class = Supplier -%>
<div class="page-header">
  <h3><%= 'Suppliers'.upcase %>
    <span class="pull-right">
      <%= link_to 'Add Supplier',
                  new_supplier_path,
                  :class => 'btn btn-primary btn-sm' %>
    </span>
  </h3>
</div>

<div class="row col-md-offset-1">
  <% @suppliers.each do |supplier| %>
      <% if supplier.deleting_status === 'false' || supplier.deleting_status.blank? %>
          <div class="card col col-md-3 col-sm-5 col-xs-11 text-center" style="margin: 1rem">
            <div class="card-block">
              <h4 class="card-title"><strong><%= supplier.name %></strong></h4>
              <hr />
              <p class="card-text">
                <strong>Addres: </strong> <%= supplier.address %> <br />
                <strong>Contact: </strong> <%= supplier.contact_number %> <br />
              </p>
              <hr />
              <%= link_to 'View', supplier_path(supplier), class: 'btn btn-warning btn-sm' %>
            </div>
          </div>
      <% end %>
  <% end %>
</div>
