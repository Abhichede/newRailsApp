<%- model_class = ContractualLabour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:contract_name) %></th>
      <th><%= model_class.human_attribute_name(:contractor_id) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_by) %></th>
      <th><%= model_class.human_attribute_name(:site_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contractual_labours.each do |contractual_labour| %>
      <tr>
        <td><%= link_to contractual_labour.id, contractual_labour_path(contractual_labour) %></td>
        <td><%= contractual_labour.date %></td>
        <td><%= contractual_labour.contract_name %></td>
        <td><%= contractual_labour.contractor_id %></td>
        <td><%= contractual_labour.quantity %></td>
        <td><%= contractual_labour.unit %></td>
        <td><%= contractual_labour.rate %></td>
        <td><%= contractual_labour.amount %></td>
        <td><%= contractual_labour.created_by %></td>
        <td><%= contractual_labour.site_id %></td>
        <td><%=l contractual_labour.created_at %></td>
        <td>
          <% link_to t('.show', :default => t("helpers.links.show")),
                      contractual_labour_path(contractual_labour), :class => 'btn btn-default btn-xs' %>
          <% link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contractual_labour_path(contractual_labour), :class => 'btn btn-default btn-xs' %>
          <% link_to t('.destroy', :default => t("helpers.links.destroy")),
                      contractual_labour_path(contractual_labour),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
