<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
      table { overflow: visible !important; }
      thead { display: table-header-group }
      tfoot { display: table-row-group }
      tr { page-break-inside: avoid }
      .booking-form.table-bordered {
          border: 1px solid #000 !important;
      }
      .booking-form.table-bordered tr {
          margin: 0;
      }
      .booking-form.table-bordered > thead > tr > th,
      .booking-form.table-bordered > tbody > tr > th,
      .booking-form.table-bordered > tfoot > tr > th,
      .booking-form.table-bordered > thead > tr > td,
      .booking-form.table-bordered > tbody > tr > td,
      .booking-form.table-bordered > tfoot > tr > td {
          border: 1px solid #000 !important;
          padding-left: 5px;
      }
      .key-value-container {
          display: flex;
          justify-content: space-between;
          margin-bottom: 5px;
      }
      .key-value-container > .key {
          float: left;
          padding-right: 30px;
          font-weight: bold;
      }
      .key-value-container > .value {
          float: right;
          margin-right: 250px;
      }
    </style>
  </head>
  <body onload='number_pages'>
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>
