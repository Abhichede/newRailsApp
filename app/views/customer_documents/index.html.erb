<div class="page-header">
  <div class="row">
    <div class="col-md-4">
      <div class="col-md-2">
        <%= link_to booking_detail_path(@booking_details) do %>
            <i class="glyphicon glyphicon-arrow-left btn btn-warning"></i>
        <% end %>
      </div>
      <div class="col-md-8">
        <h4><strong><%= 'Documents'.upcase %></strong></h4>
      </div>
    </div>
    <div class="col-md-8">
      <div class="col-md-2 col-sm-6 col-xs-5">
        <%= link_to "New", new_booking_detail_customer_document_path, :class => 'btn btn-primary btn-sm btn-block' %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= @customer_documents.each do |document| %>
      <div class="col-md-4">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h4 class="card-title">
              <strong><%= document.name.upcase %></strong>
            </h4>
          </div>
          <div class="panel-body">
            <%= image_tag document.path.url, class: 'img-responsive' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>