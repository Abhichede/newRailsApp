<div class="row">
  <div class="col-md-3">
    <div class="panel panel-success">
      <div class="panel-heading text-center">
        <%= Site.all.count %>
      </div>
      <div class="panel-body text-center">
        Sites
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading text-center">
        <%= BookingDetail.all.count %>
      </div>
      <div class="panel-body text-center">
        Customers
        <span class="fa fa-spinner fa-spin fa-lg"></span>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-danger">
      <div class="panel-heading text-center">
        <%= Flat.all.count %>
      </div>
      <div class="panel-body text-center">
        Flats
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="panel panel-danger">
      <div class="panel-heading text-center">
        Currently Signed in users
      </div>
      <div class="panel-body text-center">
        <% User.all.each do |user| %>
          <% if UsersController.online?(user) %>
            Name: <%= user.user_name %> <br/>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>

