<%- model_class = Site -%>
<div class="page-header">
  <h3><%= 'All Sites'.upcase %>
    <span class="pull-right">
      <%= link_to 'Add Site',
                  new_site_path,
                  :class => 'btn btn-primary btn-sm' %>
    </span>
  </h3>
</div>

<div class="row col-md-offset-1">
<% @sites.each do |site| %>
  <div class="card card-cascade narrower col col-md-4 col-sm-5 col-xs-11 " style="margin: 1rem">
    <div class="view overlay hm-white-slight  ">
      <% if site.photo_path.blank? %>

      <% else %>
          <%= image_tag site.photo_path.medium.url %>
      <% end  %>
    </div>
    <div class="card-block">
      <h4 class="card-title"><strong><%= site.name.upcase %></strong></h4>
      <span class="card-text">
        <strong>Addres: </strong> <%= site.address %> <br />
      </span>
      <%= link_to 'Visit', site_path(site), class: 'btn btn-warning btn-sm' %>
    </div>
    <hr />
    <div class="card-data text-muted text-center">
      Booked Flats <span class="badge black"> <%= site.flats.where(:booking_status=>1).count %></span>
    </div>
  </div>
<% end %>
</div>