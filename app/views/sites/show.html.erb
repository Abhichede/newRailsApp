<%- model_class = Site -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @site.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @site.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flat_count) %>:</strong></dt>
  <dd><%= @site.flat_count %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_type) %>:</strong></dt>
  <dd><%= @site.site_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_number) %>:</strong></dt>
  <dd><%= @site.unit_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @site.area %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% if @site.flats.count != @site.flat_count %>
  <%= link_to 'Add Flat', {:controller => "flats", :action => "new", :site_id => @site.id }, :class => 'btn btn-success' %>
<% end %>
<div class="jumbotron row" style="margin-top: 0.5em">
  <h4>Available Flats</h4>
  <% @site.flats.each do |flat| %>
      <div class="well col-md-2 col-lg-2 col-sm-2 col-xs-2">
        <%= link_to flat.flat_number, flat_path(flat) %>
      </div>
  <% end %>
</div>
