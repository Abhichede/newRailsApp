<%= form_for @site, :html => { :class => "form-horizontal site" } do |f| %>

  <% if @site.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :flat_count, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :flat_count, :class => 'form-control' %>
    </div>
    <%=f.error_span(:flat_count) %>
  </div>
  <div class="form-group">
    <%= f.label :site_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :site_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:site_type) %>
  </div>
  <div class="form-group">
    <%= f.label :unit_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :unit_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:unit_number) %>
  </div>
  <div class="form-group">
    <%= f.label :area, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :area, :class => 'form-control' %>
    </div>
    <%=f.error_span(:area) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sites_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
