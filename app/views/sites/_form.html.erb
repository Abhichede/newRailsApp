<%= form_for @site, :html => { :class => "form-horizontal site" } do |f| %>

  <% if @site.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
    <div class="form-group">
      <%= f.label :site_type, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select(:site_type, options_for_select([['Select type'],['Residential','Residential'],['Commercial','Commercial']],
                                                    :disabled=> 'Select type'),
                     {}, class: 'form-control') %>
      </div>
      <%=f.error_span(:site_type) %>
    </div>

    <div class="form-group">
    <%= f.label :type_of_structures, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :type_of_structures, :class => 'form-control' %>
    </div>
    <%=f.error_span(:type_of_structures) %>
  </div>

  <div class="form-group">
    <%= f.label :no_of_units, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :no_of_units, :class => 'form-control' %>
    </div>
    <%=f.error_span(:no_of_units) %>
  </div>
  <div class="form-group">
    <%= f.label :area_of_plot, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :area_of_plot, :class => 'form-control' %>
    </div>
    <%=f.error_span(:area_of_plot) %>
  </div>
  <div class="form-group">
    <%= f.label :project_approved_by, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :project_approved_by, :class => 'form-control' %>
    </div>
    <%=f.error_span(:project_approved_by) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <% if @site.id != nil %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  site_path(@site), :class => 'btn btn-default' %>
      <% else %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      sites_path, :class => 'btn btn-default' %>
      <% end %>
    </div>
  </div>

<% end %>
